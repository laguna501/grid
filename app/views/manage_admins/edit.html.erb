<div class="frame" id="user-form-container">
<%#= form_for current_user, url: manage_admin_url do |f| %>
<%= form_for(@admin, url: manage_admin_url) do |f| %>
  <table>
    <tr>
      <td><%= f.label :username %></td>
      <td><%= f.text_field :username %></td>
    </tr>
    <% if current_user == @admin %>
      <tr>
        <td><%= f.label :original_password %></td>
        <td><%= f.password_field :original_password, required: true %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= f.label :password, "New password" %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "New password confirmation" %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>
  <div id="user-submit-container"><%= f.submit "Update your information" %></div>
<%- end -%>
</div>
