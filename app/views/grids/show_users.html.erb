<div id="show_users">
  <h1><%= @type.to_s.titleize %> Grid</h1>
  <section id="options" class="clearfix">
    <div id="layouts" class="option-set clearfix" data-option-key="layoutMode">
      <h4>Layout: </h4>
      <div class="layouts" data-option-value="masonry" class="selected">masonry</div>
      <div class="layouts" data-option-value="fitRows">fitRows</div>
    </div>
  </section>

  <div id="filters" class="option-set clearfix" data-option-key="filterMode">
    <div class="filters" data-option-value="*">Show all</div>
    <% @user_photos.keys.sort.each do |facebook_uid| %>
      <div class="filters" data-option-value="<%= facebook_uid %>"><%= facebook_uid %></div>
    <% end %>
  </div>

  <div id="container">
    <% @user_photos.each do |facebook_uid, photos|%>
      <% photos.each do |photo| %>
        <% image = photo.thumbnail %>
        <div class="item <%= photo.photo_type %>" owner="<%= facebook_uid %>">
          <%= link_to(
            image_tag(image),
            show_photo_grids_url(owner: facebook_uid, identifier: photo.identifier), target: "_blank"
          ) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
