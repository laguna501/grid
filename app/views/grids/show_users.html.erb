
<section id="title_bar">
    <div class="content">
      <%= link_to "Â« Back to Home Page",:back  %>
    </div>
</section>
<div id="wrap">


  <div id="show_users" class="container">
    <h1><%= @title %></h1>
    <section id="options" class="clearfix">
      <div id="layouts" class="option-set clearfix" data-option-key="layoutMode">
        <h4>Layout: </h4>
        <div id="grid-masonry" class="layouts selected" data-option-value="masonry">masonry</div>
        <div id="grid-fitrows" class="layouts" data-option-value="fitRows">fitRows</div>
      </div>
    </section>
    <div class="filtersourceicon">
      <div class="filtersource fb-icon" data-option-value="facebook">
        <a id="show-facebook" class=""></a>
      </div>

      <div class="filtersource inst-icon" data-option-value="instagram">
         <a id="show-instagram" class="" ></a>
      </div>
    </div>


  <div id="filter" class="btn-group option-set clearfix" data-option-key="filterMode">
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Show Photos
    <span class="caret"></span>
  </a>

  <!-- Link or button to toggle dropdown -->
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li class="filters" data-option-value="*">
      <a id="show-all-user" tabindex="-1" href="#" data-user-type="<%= @type %>">All</a>
    </li>
    <% @users.each do |nickname| %>
    <li class="filters" data-option-value="<%= nickname %>">
      <a id="username-<%= nickname %>" tabindex="-1" href="#" data-user-id="<%= nickname %>"><%= nickname %></a></li>
     <% end %>
  </ul>
</div>


    <%= hidden_field_tag "type", @type %>
    <%= hidden_field_tag "user", @user ? @user.id : nil %>
    <%= hidden_field_tag "current_page" %>
    <div id="container" class="infinite-scrolling">
    </div>
  </div>
</div>
